{
  "compilerOptions": {
    "target": "es6", // Webpack で ES5に変換されるのでここでは最新の仕様
    "module": "commonjs",
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist", // Webpack で出力先は指定するが、念の為・・・
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true
  },
  "files": [
    "src/electron/main.ts"
  ]
}